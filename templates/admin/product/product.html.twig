{% extends "admin/base.html.twig" %}
{% block title %}
	gestisce prodotti
{% endblock %}
{% block body %}
	<div class="container-fluid">
		<h1 class="my-5 text-center">Gestione deiProdotti</h1>
		<div class="row">
			<div class="col-12 col-sm-12 col-md-10">
				<table class="table  table-hover ">
					<thead>
						<tr class="bg-primary text-white ">
							<th>
								ID
							</th>
							<th>
								Nome del Prodotto
							</th>
							<th>
								Aggiorna
							</th>
							<th>
								Cancella
							</th>
						</tr>
					</thead>
					<tbody>
						{% for product in products %}
							<tr>
								<td>{{product.id}}</td>
								<td>{{product.nomeStile}}</td>
								<td>
									<a href="{{path('prodotto_edit',{'id':product.id})}}" class="btn btn-primary">
										<i class="fa fa-edit fa-1x"></i>
									</a>
								</td>
								<td>
									<a href="" class="btn btn-danger">
										<i class="fa fa-trash-o "></i>
									</a>
								</td>
							</tr>
						{% endfor %}


					</tbody>
				</table>
				<div class="d-flex justify-content-center">
					<ul class="pagination ">
						<li class="page-item {% if page == 1 %}disabled{% endif %} ">
							<a class="page-link" href="{{path('admin_product',{'page': page - 1})}}">&laquo;</a>
						</li>


						{% for i in 1..pages %}
							<li class="page-item {% if page == i %}active{% endif %} ">
								<a class="page-link" href="{{path('admin_product',{'page': i})}}">{{i}}</a>
							</li>
						{% endfor %}
						<li class="page-item {% if page == pages %}disabled{% endif %}">
							<a class="page-link" href="{{path('admin_product',{'page': page + 1})}}">&raquo;</a>
						</li>


					</ul>
				</div>
			</div>
			<div class="col-2">
				<a href="{{path('prodotto_create')}}" class="btn btn-primary">
					<i class="fa fa-check-square-o "></i>Aggiungi un prodotto
				</a>
			</div>
		</div>
	</div>
{% endblock %}
