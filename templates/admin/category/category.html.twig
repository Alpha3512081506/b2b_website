{% extends "admin/base.html.twig" %}
{% block title %}
	gestisce categorie
{% endblock %}
{% block body %}
	<div class="row">

		<div class="col-12 col-sm-12 col-md-10">

			<table class="table table-hover">
				<thead>
					<tr class="bg-primary text-white">
						<th>
							<h2 class="display-6">ID</h2>
						</th>
						<th>
							Nome Categoria
						</th>
						<th>
							Aggiorna
						</th>
						<th>
							Cancella
						</th>
					</tr>
				</thead>
				<tbody>
					{% for category in categories.findAll() %}
						<tr>
							<td>{{category.id}}</td>
							<td>{{category.nomeCategoria}}</td>
							<td>
								<a href="" class="btn btn-success">
									<i class="fa fa-edit"></i>
								</a>
							</td>
							<td>
								<a href="" class="btn btn-danger">
									<i class="fa fa-trash-o"></i>
								</a>
							</td>

						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<div class="col-2">
			<a href="{{path('category_create')}}" class="btn btn-primary">
				<i class="fa fa-check-square-o fa-3x"></i>Aggiungi una categoria</a>
		</div>
	</div>

{% endblock %}
