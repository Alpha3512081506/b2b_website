{% extends 'base.html.twig' %}

{% block title %}
	{{slug}}
{% endblock %}

{% block body %}
	<ol class="breadcrumb my-5">
		<li class="breadcrumb-item">
			<a href="{{path('home_index')}}">Home</a>
		</li>
		<li class="breadcrumb-item">
			{{categoria.nomeCategoria}}
		</li>

	</ol>
	<div class="row">

		{% for product in categoria.prodotti %}
			<div class="col-3">


				<div class="card"><img src="{{product.coverImage}}" alt="image de la carte" class="img-fluid">
					<div class="card-body">
						<span class="badge badge-primary center">
							<em>{{categoria.nomeCategoria}}</em>
						</span>
						<h3 class="titlt">{{product.nomeStile}}</h3>
						<p class="card-text">{{product.commento}}</p>
						<a href="{{path('prodotto_show', {'slug_categoria':product.categoria.slug,'slug_prodotto':product.slug})}}" class="btn btn-primary btn-sm ">Details</a>
						<a href="{{path('cart_add',{'id':product.id})}}" class="btn btn-info btn-sm">Agguingi Al Carello</a>
					</div>
				</div>


			</div>
		{% endfor %}
	</div>


{% endblock %}
